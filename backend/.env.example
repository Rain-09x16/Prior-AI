# Application Configuration
APP_NAME=Auto-Prior Art Analyst
APP_VERSION=1.0.0
DEBUG=True

# Database
DATABASE_URL=sqlite:///./priorai.db

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.docx

# watsonx Configuration
# Get these from IBM Cloud: https://cloud.ibm.com/
WATSONX_API_KEY=your_key
WATSONX_PROJECT_ID=your_project_id
WATSONX_URL=https://us-south.ml.cloud.ibm.com

# Google Patents API (optional)
GOOGLE_PATENTS_API_KEY=your_google_api_key_here


# watsonx Orchestrate Configuration
WATSONX_ORCHESTRATE_URL=https://api.watsonx-orchestrate.ibm.com
WATSONX_ORCHESTRATE_API_KEY=your_orchestrate_api_key_here
WATSONX_ORCHESTRATE_TEAM_ID=your_team_id_here
WATSONX_WORKFLOW_ID=workflow-patent-analysis

# watsonx NLU
WATSONX_NLU_API_KEY=your_nlu_api_key
WATSONX_NLU_URL=https://api.us-south.natural-language-understanding.watson.cloud.ibm.com/instances/xxxxx


# Clerk Authentication
# Get these from https://dashboard.clerk.com
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
